@model Coren.OnlinePortal.Web.Models.Dto.User.ValidateUserRequest

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

</head>
<body>

    <div class="login">
        <h1>Login</h1>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Username" required="required" />
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required" />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>

    </div>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }

   
</body>
</html>